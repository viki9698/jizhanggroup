<script tpye="text/javascript">
$(function(){
    $("input[name='save']").click(
    function(){
        var ids = "";
        var i = 0;
        $("#id_relatedContacts option:selected").each(function()
        {
            if (i==0)
            {
                ids = $(this).val();
            } else {
                ids +="," + $(this).val();
            }
            i++;
        });
        if (ids == "")
        {
            alert("请至少为记账簿选择一个相关人员。");
            return false;
        }
        $("input[name='contacts']").val(ids);
    })

}
);
</script>

  <script>
  $(function() {
  
    $("input[name='checkAll']").click(function(){
           var flag = $(this).prop("checked");
           $("input[name='checkItem']").prop("checked", flag);
           var addFlag = flag?"on":"off";
           var removeFlag= flag?"off":"on";
           $("label[name='labelCheckItem']").removeClass("ui-checkbox-" + removeFlag).addClass("ui-checkbox-" + addFlag);
           $("input[name='checkItem']").checkboxradio("refresh");
    });
  $('a,form').each(function(){
    $(this).attr('data-ajax', false);
  });

  });
  </script>
    


